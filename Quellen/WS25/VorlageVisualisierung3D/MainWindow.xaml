<Window x:Class="VorlageVisualisierung3D.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VorlageVisualisierung3D"
        xmlns:vorlagen="clr-namespace:VorlageVisualisierung3D.Vorlagen"
        mc:Ignorable="d"
        Title="Vorlage Visualisierung 3D" Height="450" Width="800" BorderBrush="LightGray" BorderThickness="1">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        
        <vorlagen:PointVorlage Grid.Row="0" Grid.Column="0"/>
        <Label Grid.Row="1" Grid.Column="0" BorderBrush="LightGray" BorderThickness="1"/>
        <Label Grid.Row="2" Grid.Column="0" BorderBrush="LightGray" BorderThickness="1"/>

        <vorlagen:LineVorlage Grid.Row="0" Grid.Column="1"/>
        <vorlagen:LineStripVorlage Grid.Row="1" Grid.Column="1"/>
        <vorlagen:LineLoopVorlage Grid.Row="2" Grid.Column="1"/>
        
        <vorlagen:TriangleVorlage Grid.Row="0" Grid.Column="2"/>
        <vorlagen:TriangleStripVorlage Grid.Row="1" Grid.Column="2"/>
        <vorlagen:TriangleFanVorlage Grid.Row="2" Grid.Column="2"/>

        <vorlagen:QuadVorlage Grid.Row="0" Grid.Column="3"/>
        <vorlagen:QuadStripVorlage Grid.Row="1" Grid.Column="3"/>
        <Label Grid.Row="2" Grid.Column="3" BorderBrush="LightGray" BorderThickness="1"/>

        <vorlagen:MatrixVorlage Grid.Row="0" Grid.Column="4"/>
        <Label Grid.Row="1" Grid.Column="4" BorderBrush="LightGray" BorderThickness="1"/>
        <Label Grid.Row="2" Grid.Column="4" BorderBrush="LightGray" BorderThickness="1"/>
    </Grid>
</Window>
