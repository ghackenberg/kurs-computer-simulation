<Window x:Class="VorlageKugel3D.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VorlageKugel3D"
        mc:Ignorable="d"
        Title="Kugel Übung" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <local:Kugel Radius="1" Stacks="5" Slices="5" Flat="True" Solid="False" Wire="True" Grid.Column="0" Grid.Row="0"/>
        <local:Kugel Radius="1" Stacks="10" Slices="10" Flat="True" Solid="False" Wire="True" Grid.Column="0" Grid.Row="1"/>
        <local:Kugel Radius="1" Stacks="20" Slices="20" Flat="True" Solid="False" Wire="True" Grid.Column="0" Grid.Row="2"/>

        <local:Kugel Radius="1" Stacks="5" Slices="5" Flat="True" Solid="True" Wire="True" Grid.Column="1" Grid.Row="0"/>
        <local:Kugel Radius="1" Stacks="10" Slices="10" Flat="True" Solid="True" Wire="True" Grid.Column="1" Grid.Row="1"/>
        <local:Kugel Radius="1" Stacks="20" Slices="20" Flat="True" Solid="True" Wire="True" Grid.Column="1" Grid.Row="2"/>

        <local:Kugel Radius="1" Stacks="5" Slices="5" Flat="False" Solid="True" Wire="True" Grid.Column="2" Grid.Row="0"/>
        <local:Kugel Radius="1" Stacks="10" Slices="10" Flat="False" Solid="True" Wire="True" Grid.Column="2" Grid.Row="1"/>
        <local:Kugel Radius="1" Stacks="20" Slices="20" Flat="False" Solid="True" Wire="True" Grid.Column="2" Grid.Row="2"/>

        <local:Kugel Radius="1" Stacks="5" Slices="5" Flat="True" Solid="True" Wire="False" Grid.Column="3" Grid.Row="0"/>
        <local:Kugel Radius="1" Stacks="10" Slices="10" Flat="True" Solid="True" Wire="False" Grid.Column="3" Grid.Row="1"/>
        <local:Kugel Radius="1" Stacks="20" Slices="20" Flat="True" Solid="True" Wire="False" Grid.Column="3" Grid.Row="2"/>

        <local:Kugel Radius="1" Stacks="5" Slices="5" Flat="False" Solid="True" Wire="False" Grid.Column="4" Grid.Row="0"/>
        <local:Kugel Radius="1" Stacks="10" Slices="10" Flat="False" Solid="True" Wire="False" Grid.Column="4" Grid.Row="1"/>
        <local:Kugel Radius="1" Stacks="20" Slices="20" Flat="False" Solid="True" Wire="False" Grid.Column="4" Grid.Row="2"/>
    </Grid>
</Window>
